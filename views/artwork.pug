include header.pug

h2 Artwork

.flexbox
   for item in artwork
      .flexcard(class="z-depth-5")
         p(class='id')= item.id
         h4=item.title
         img(item.thumbnailUrl alt='thumbnail of'+item.id)
         p=item.accession_number
         p=item.artist
         p=item.artistRole
         p=item.artistId
         p=item.dateText
         p=item.medium
         p=item.creditLine
         p=item.year
         p=item.acquisitionYear
         p=item.dimensions
         p=item.width
         p=item.height
         p=item.depth
         p=item.units
         p=item.inscription
         p=item.thumbnailCopyright
         p=item.url

include footer.pug
